    "siwe": "^2.3.2",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "validate-cli": "workspace:*",
    "viem": "^2.17.3",
    "wagmi": "^2.10.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
