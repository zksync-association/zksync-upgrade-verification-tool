{
  "name": "@repo/contracts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "author": "moonsong-labs",
  "license": "(MIT OR Apache-2.0)",
  "exports": {
    "./helpers/*": "./helpers/*.ts",
    "./artifacts/ProtocolUpgradeHandler/*": "./artifacts/src/zk-gov/l1-contracts/src/ProtocolUpgradeHandler.sol/*",
    "./artifacts/EmergencyUpgradeBoard/*": "./artifacts/src/zk-gov/l1-contracts/src/EmergencyUpgradeBoard.sol/*",
    "./artifacts/Guardians/*": "./artifacts/src/zk-gov/l1-contracts/src/Guardians.sol/*",
    "./artifacts/SecurityCouncil/*": "./artifacts/src/zk-gov/l1-contracts/src/SecurityCouncil.sol/*",
    "./artifacts/ZkGovOpsGovernor/*": "./artifacts/src/zk-gov-preprocessed/l2-contracts/src/ZkGovOpsGovernor.sol/*",
    "./artifacts/ZkTokenGovernor/*": "./artifacts/src/zk-gov-preprocessed/l2-contracts/src/ZkTokenGovernor.sol/*",
    "./artifacts/ZkProtocolGovernor/*": "./artifacts/src/zk-gov-preprocessed/l2-contracts/src/ZkProtocolGovernor.sol/*"
  },
  "scripts": {
    "build:l1": "hardhat compile",
    "build:l2": "pnpm hardhat compile --config hardhat-l2.config.cts",
    "build": "run-p build:l1 build:l2",
    "preprocess:zk-gov": "NODE_OPTIONS='--experimental-loader ts-node/esm/transpile-only --no-warnings=ExperimentalWarning' node scripts/preprocess-zk-gov.ts",
    "typecheck": "tsc --noEmit",
    "node": "hardhat node",
    "node-l2": "pnpm hardhat --config hardhat-l2.config.cts node-zksync",
    "deploy:setup": "NODE_OPTIONS='--experimental-loader ts-node/esm/transpile-only --no-warnings=ExperimentalWarning' hardhat run scripts/deploy-setup.ts --network local",
    "deploy:setup:l2": "NODE_OPTIONS='--experimental-loader ts-node/esm/transpile-only --no-warnings=ExperimentalWarning' hardhat run --config hardhat-l2.config.cts scripts/l2-deploy-setup.ts --network local",
    "deploy:setup:remote": "NODE_OPTIONS='--experimental-loader ts-node/esm/transpile-only --no-warnings=ExperimentalWarning' hardhat run scripts/deploy-setup.ts --network remote",
    "deploy:upgrade": "NODE_OPTIONS='--experimental-loader ts-node/esm/transpile-only --no-warnings=ExperimentalWarning' hardhat run scripts/start-upgrade.ts $HANDLER --network local",
    "clean": "hardhat clean",
    "test": "NODE_OPTIONS='--experimental-loader ts-node/esm/transpile-only --no-warnings=ExperimentalWarning' hardhat test"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-deploy": "^1.5.0",
    "@matterlabs/hardhat-zksync-ethers": "^1.2.1",
    "@matterlabs/hardhat-zksync-node": "^1.1.1",
    "@matterlabs/hardhat-zksync-solc": "^1.2.4",
    "@nomicfoundation/hardhat-viem": "2.0.3",
    "@openzeppelin-v4/contracts": "npm:@openzeppelin/contracts@4",
    "@openzeppelin-v4/contracts-upgradeable": "npm:@openzeppelin/contracts-upgradeable@4",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@repo/typescript-config": "workspace:^",
    "@types/chai": "^4.3.19",
    "@types/node": "^22.5.1",
    "@repo/common": "workspace:*",
    "chai": "^5.1.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "glob": "^11.0.0",
    "hardhat": "^2.22.6",
    "npm-run-all": "^4.1.5",
    "ora": "^8.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "viem": "2.17.5",
    "zksync-ethers": "^6.12.1"
  }
}
